{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "NODE_ENV": {
            "type": "string"
        },
        "NOMIS_URL": {
            "type": "string"
        },
        "NOMIS_TOKEN": {
            "type": "secureString"
        },
        "NOMIS_PRIVATE_KEY": {
            "type": "secureString"
        },
        "SESSION_SECRET": {
            "type": "secureString"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[concat(parameters('name'), '/appsettings')]",
            "type": "Microsoft.Web/sites/config",
            "properties": {
                "WEBSITE_NODE_DEFAULT_VERSION": "6.10.0",
                "NODE_ENV": "[parameters('NODE_ENV')]",
                "NOMIS_URL": "[parameters('NOMIS_URL')]",
                "NOMIS_TOKEN": "[parameters('NOMIS_TOKEN')]",
                "NOMIS_PRIVATE_KEY": "[parameters('NOMIS_PRIVATE_KEY')]",
                "SESSION_SECRET": "[parameters('SESSION_SECRET')]"
            }
        }
    ]
}
