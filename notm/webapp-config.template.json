{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "NODE_ENV": {
            "type": "string"
        },
        "API_ENDPOINT_URL": {
            "type": "string"
        },
        "USE_API_AUTH": {
            "type": "string"
        },
        "REWRITE_CONTEXT_ENDPOINT": {
            "type": "string"
        },
        "NOMS_TOKEN": {
            "type": "secureString"
        },
        "NOMS_PRIVATE_KEY": {
            "type": "secureString"
        },
        "SESSION_SECRET": {
            "type": "secureString"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[concat(parameters('name'), '/appsettings')]",
            "type": "Microsoft.Web/sites/config",
            "properties": {
                "WEBSITE_NODE_DEFAULT_VERSION": "7.4.0",
                "NODE_ENV": "[parameters('NODE_ENV')]",
                "API_ENDPOINT_URL": "[parameters('API_ENDPOINT_URL')]",
                "REWRITE_CONTEXT_ENDPOINT": "[parameters('REWRITE_CONTEXT_ENDPOINT')]",
                "USE_API_AUTH": "[parameters('USE_API_AUTH')]",
                "NOMS_TOKEN": "[parameters('NOMS_TOKEN')]",
                "NOMS_PRIVATE_KEY": "[parameters('NOMS_PRIVATE_KEY')]",
                "SESSION_SECRET": "[parameters('SESSION_SECRET')]"
            }
        }
    ]
}
