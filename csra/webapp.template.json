{
    "parameters": {
        "hostname": {
            "type": "string"
        },
        "environment": {
            "type": "String"
        },
        "tagvalues": {
            "type": "object",
            "defaultValue": {
                "Service": "CSRA",
                "Environment": "[parameters('environment')]"
            }
        },
        "ip1": {
            "type": "string",
            "defaultValue": "255.255.255.255",
            "metadata": {
                "description": "placeholder: equivalent to an empty record"
            }
        },
        "subnet1": {
            "type": "string",
            "defaultValue": "255.255.255.255"
        },
        "ip2": {
            "type": "string",
            "defaultValue": "255.255.255.255",
            "metadata": {
                "description": "placeholder: equivalent to an empty record"
            }
        },
        "subnet2": {
            "type": "string",
            "defaultValue": "255.255.255.255"
        },
        "ip3": {
            "type": "string",
            "defaultValue": "255.255.255.255",
            "metadata": {
                "description": "placeholder: equivalent to an empty record"
            }
        },
        "subnet3": {
            "type": "string",
            "defaultValue": "255.255.255.255"
        }
    },
    "variables": {
        "name": "[concat('csra-', toLower(parameters('environment')))]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-01",
            "name": "[variables('name')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "name": "[variables('name')]",
                "serverFarmId": "[variables('name')]",
                "hostingEnvironment": ""
            },
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagvalues')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('name'))]"
            ],
            "resources": [
                {
                    "name": "web",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('name'))]"
                    ],
                    "properties": {
                        "alwaysOn": "true",
                        "ipSecurityRestrictions": [
                            {"ipAddress": "[parameters('ip1')]", "subnetMask": "[parameters('subnet1')]"},
                            {"ipAddress": "[parameters('ip2')]", "subnetMask": "[parameters('subnet2')]"},
                            {"ipAddress": "[parameters('ip3')]", "subnetMask": "[parameters('subnet3')]"}
                        ]
                    }
                }
            ]
        },
        {
            "type":"Microsoft.Web/sites/hostnameBindings",
            "name":"[concat(variables('name'), '/', parameters('hostname'))]",
            "apiVersion":"2016-03-01",
            "location":"[resourceGroup().location]",
            "properties":{
            },
            "dependsOn": [
                "[concat('Microsoft.Web/sites/',variables('name'))]"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagvalues')]",
            "properties": {
                "name": "[variables('name')]",
                "workerSizeId": "0",
                "reserved": false,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            }
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}
