{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "hostname": {
            "type": "string"
        },
        "service": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "DB_USER": {
            "type": "string"
        },
        "DB_PASS": {
            "type": "secureString"
        },
        "DB_SERVER": {
            "type": "string"
        },
        "DB_NAME": {
            "type": "string"
        }
    },
    "variables": {
        "tagvalues": {
            "Service": "[parameters('service')]",
            "Environment": "[parameters('environment')]"
        }
    },
    "resources": [
        {
            "apiVersion": "2016-03-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "name": "[parameters('name')]",
                "serverFarmId": "[parameters('name')]"
            },
            "location": "[resourceGroup().location]",
            "tags": "[variables('tagvalues')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('name'))]"
            ]
        },
        {
            "type":"Microsoft.Web/sites/hostnameBindings",
            "name":"[concat(parameters('name'), '/', parameters('hostname'))]",
            "apiVersion":"2016-03-01",
            "location":"[resourceGroup().location]",
            "properties":{
            },
            "dependsOn": [
                "[concat('Microsoft.Web/sites/',parameters('name'))]"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tagvalues')]",
            "properties": {
                "name": "[parameters('name')]",
                "workerSizeId": "0",
                "reserved": false,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            }
        }
    ],
    "outputs": {
        "ips": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name'))).outboundIpAddresses]"
        }
    }
}
