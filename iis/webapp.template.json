{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "hostname": {
            "type": "string"
        },
        "service": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "DB_SERVER": {
            "type": "string"
        },
        "DB_USER": {
            "type": "string"
        },
        "DB_PASS": {
            "type": "secureString"
        },
        "DB_NAME": {
            "type": "string"
        },
        "CLIENT_ID": {
            "type": "string"
        },
        "CLIENT_SECRET": {
            "type": "secureString"
        },
        "TOKEN_HOST": {
            "type": "string"
        }
    },
    "variables": {
        "tagvalues": {
            "Service": "[parameters('service')]",
            "Environment": "[parameters('environment')]"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "name": "[parameters('name')]",
                "serverFarmId": "[parameters('name')]",
                "clientAffinityEnabled": false
            },
            "location": "[resourceGroup().location]",
            "tags": "[variables('tagvalues')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('name'))]"
            ],
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('name'))]"
                    ],
                    "properties": {
                        "WEBSITE_NODE_DEFAULT_VERSION": "6.9.1",
                        "DB_SERVER": "[parameters('DB_SERVER')]",
                        "DB_USER": "[parameters('DB_USER')]",
                        "DB_PASS": "[parameters('DB_PASS')]",
                        "DB_NAME": "[parameters('DB_NAME')]",
                        "CLIENT_ID": "[parameters('CLIENT_ID')]",
                        "CLIENT_SECRET": "[parameters('CLIENT_SECRET')]",
                        "TOKEN_HOST": "[parameters('TOKEN_HOST')]"
                    }
                },
                {
                    "name": "web",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('name'))]"
                    ],
                    "properties": {
                        "alwaysOn": "true"
                    }
                },
                {
                    "name": "RedirectHttpToHttps",
                    "type": "siteextensions",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('name'))]"
                    ],
                    "properties": { }
                }
            ]
        },
        {
            "type":"Microsoft.Web/sites/hostnameBindings",
            "name":"[concat(parameters('name'), '/', parameters('hostname'))]",
            "apiVersion":"2016-03-01",
            "location":"[resourceGroup().location]",
            "properties":{
            },
            "dependsOn": [
                "[concat('Microsoft.Web/sites/',parameters('name'))]"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tagvalues')]",
            "properties": {
                "name": "[parameters('name')]",
                "workerSizeId": "0",
                "reserved": false,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            }
        }
    ],
    "outputs": {
        "ips": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name'))).outboundIpAddresses]"
        }
    }
}
