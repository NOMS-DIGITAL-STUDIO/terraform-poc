{
  "Version": "2012-10-17",
  "Statement": [{
      "Action": [
        "elasticbeanstalk:CreateApplication",
        "elasticbeanstalk:DeleteApplication"
      ],
      "Effect": "Deny",
      "Resource": "*"
    },
    {
      "Action": [
        "elasticbeanstalk:*"
      ],
      "Effect": "Allow",
      "Resource": ["arn:aws:elasticbeanstalk:*::solutionstack/*",
        "arn:aws:elasticbeanstalk:${aws_region}:${aws_account_id}:application/${aws_application_name}",
        "arn:aws:elasticbeanstalk:${aws_region}:${aws_account_id}:applicationversion/${aws_application_name}/*",
        "arn:aws:elasticbeanstalk:${aws_region}:${aws_account_id}:environment/${aws_application_name}/*",
        "arn:aws:elasticbeanstalk:${aws_region}:${aws_account_id}:template/${aws_application_name}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "ec2:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/Service": "${aws_application_name}"
        }
      }
    },
    {
      "Action": [
        "autoscaling:*",
        "s3:*",
        "ec2:Describe*",
        "elasticloadbalancing:*",
        "elasticbeanstalk:DescribeEnvironmentManagedActions",
        "elasticbeanstalk:CreateStorageLocation",
        "elasticbeanstalk:DescribeConfigurationOptions",
        "elasticbeanstalk:DescribeConfigurationSettings",
        "elasticbeanstalk:ListAvailableSolutionStacks",
        "elasticbeanstalk:ValidateConfigurationSettings",
        "elasticbeanstalk:CheckDNSAvailability",
        "elasticbeanstalk:CreateStorageLocation",
        "cloudwatch:*",
        "iam:GetPolicyVersion",
        "iam:GetRole",
        "iam:PassRole",
        "iam:ListRolePolicies",
        "iam:ListAttachedRolePolicies",
        "iam:ListInstanceProfiles",
        "iam:ListRoles",
        "iam:ListServerCertificates",
        "sns:*",
        "rds:*",
        "cloudformation:*",
        "logs:*"
      ],
      "Effect": "Allow",
      "Resource": "*"
    }
  ]
}
